                        <div class="grid grid-cols-2 gap-4">
                            <div class="text-center border-r border-indigo-100 pr-2">
                                <span class="text-[8px] font-black text-indigo-900 uppercase">Taxa Hist√≥rica (H)</span>
                                <div class="asset-first-speed text-[7px] font-bold text-indigo-400 mb-1">--</div>
                                <div class="space-y-1">
                                    <div class="flex justify-between text-[10px] font-black text-indigo-950">
                                        <span>6m:</span> <span class="proj-6-first">--</span>
                                    </div>
                                    <div class="flex justify-between text-[10px] font-black text-indigo-950">
                                        <span>12m:</span> <span class="proj-12-first">--</span>
                                    </div>
                                    <div class="flex justify-between text-[10px] font-black text-indigo-950">
                                        <span>24m:</span> <span class="proj-24-first">--</span>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <span class="text-[8px] font-bold text-indigo-400 uppercase">Momentum (R)</span>
                                <div class="asset-last-speed text-[7px] font-bold text-indigo-300 mb-1">--</div>
                                <div class="space-y-1">
                                    <div class="flex justify-between text-[9px] font-bold text-indigo-600">
                                        <span>6m:</span> <span class="proj-6-last">--</span>
                                    </div>
                                    <div class="flex justify-between text-[9px] font-bold text-indigo-600">
                                        <span>12m:</span> <span class="proj-12-last">--</span>
                                    </div>
                                    <div class="flex justify-between text-[9px] font-bold text-indigo-600">
                                        <span>24m:</span> <span class="proj-24-last">--</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 3. Ader√™ncia √† Aloca√ß√£o -->
                    <div class="lg:col-span-4 flex flex-col gap-3">
                        <div
                            class="bg-white rounded-2xl p-5 border border-indigo-100 shadow-sm relative overflow-hidden h-full flex flex-col justify-between">
                            <div>
                                <div class="flex justify-between items-start mb-4">
                                    <div>
                                        <p class="text-[9px] font-black text-gray-400 uppercase tracking-widest mb-1">
                                            Ader√™ncia</p>
                                        <div
                                            class="asset-deviation-badge text-[10px] font-black uppercase px-2 py-0.5 rounded-md inline-block shadow-sm transition-all">
                                            --</div>
                                    </div>
                                    <div class="flex flex-col items-end gap-1">
                                        <label class="text-[8px] font-black text-gray-400 uppercase">Target</label>
                                        <div class="relative">
                                            <input type="number"
                                                class="fund-target-pct w-14 p-1 text-xs font-black text-indigo-700 bg-gray-50 border border-indigo-100 rounded-lg text-center"
                                                value="0">
                                            <span
                                                class="absolute right-1 top-1 text-[8px] font-bold text-indigo-300">%</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="flex justify-between items-center mb-2 px-1">
                                    <span class="text-[9px] font-bold text-gray-400">Real / Alvo</span>
                                    <span class="asset-compliance-pct text-[11px] font-black text-indigo-600">0% /
                                        0%</span>
                                </div>
                            </div>

                            <div class="relative w-full bg-gray-100 h-6 rounded-full overflow-visible">
                                <div class="asset-current-bar h-full rounded-full transition-all duration-700 ease-out shadow-inner"
                                    style="width: 0%"></div>
                                <div class="target-marker h-8" style="left: 0%; top: -4px;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <!-- Template da Linha de Aporte -->
    <template id="aporte-row-template">
        <div
            class="aporte-row group bg-white p-3 rounded-xl border border-gray-100 shadow-sm transition-all hover:border-indigo-100 hover:shadow-md relative">

            <button
                class="remove-aporte-btn absolute top-2 right-2 text-gray-300 hover:text-red-500 transition-colors p-1 rounded-full hover:bg-red-50"
                title="Remover este aporte">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <div class="grid grid-cols-12 gap-3 items-end mb-2">
                <div class="col-span-4">
                    <label
                        class="text-[9px] font-black text-gray-400 uppercase tracking-wider mb-0.5 block">Aplicado</label>
                    <input type="text" inputmode="numeric"
                        class="aporte-value w-full text-xs font-bold outline-none border-b border-gray-200 focus:border-indigo-500 py-0.5 text-gray-700 transition-colors"
                        placeholder="0,00">
                </div>
                <div class="col-span-4">
                    <label
                        class="text-[9px] font-black text-gray-400 uppercase tracking-wider mb-0.5 block">Retorno</label>
                    <input type="text" inputmode="numeric"
                        class="aporte-return w-full text-xs font-bold outline-none border-b border-gray-200 focus:border-indigo-500 py-0.5 text-gray-700 transition-colors"
                        placeholder="0,00">
                </div>
                <div class="col-span-4">
                    <label
                        class="text-[9px] font-black text-gray-400 uppercase tracking-wider mb-0.5 block">Data</label>
                    <input type="date"
                        class="aporte-date w-full text-[10px] outline-none border-b border-gray-200 py-0.5 text-gray-600 focus:border-indigo-500 transition-colors">
                </div>
            </div>
            <div
                class="row-metrics flex flex-wrap justify-between items-center border-t border-gray-50 pt-2 px-0.5 gap-2">
                <div
                    class="metric-aporte-equity text-[10px] font-black text-indigo-800 bg-indigo-50 px-1.5 py-0.5 rounded">
                    Hoje: --</div>
                <div class="metric-yield text-[9px] font-bold text-gray-500">Rent: --</div>
                <div class="metric-weekly text-[9px] font-black text-indigo-600">Rate: --</div>
                <div class="metric-benchmark text-[9px] font-bold text-gray-400">% Bench: --</div>
            </div>
        </div>
    </template>

    <!-- Template da Linha de Saldo -->
    <template id="balance-row-template">
        <div
            class="balance-row flex items-center gap-3 bg-white p-2.5 rounded-lg border border-gray-100 shadow-sm hover:border-indigo-100 transition-all">
            <div class="flex-1 relative">
                <label class="text-[9px] font-black text-gray-400 uppercase tracking-wider mb-0.5 block">Saldo
                    Real</label>
                <div class="relative">
                    <span class="absolute left-0 top-1/2 -translate-y-1/2 text-[10px] font-bold text-gray-400">R$</span>
                    <input type="text" inputmode="numeric"
                        class="balance-value w-full text-sm bg-transparent border-b border-gray-100 outline-none font-bold text-indigo-800 pl-5 focus:border-indigo-500 transition-colors"
                        placeholder="0,00">
                </div>
            </div>
            <div class="flex-1">
                <label class="text-[9px] font-black text-gray-400 uppercase tracking-wider mb-0.5 block">Data</label>
                <input type="date"
                    class="balance-date w-full text-xs bg-transparent border-b border-gray-100 outline-none font-medium text-gray-600 focus:border-indigo-500 transition-colors">
            </div>
            <button class="remove-balance-btn text-gray-300 hover:text-red-500 p-1 self-end mb-1">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>
        </div>
    </template>

    <script type="module" src="/static/js/main.js"></script>
</body>

